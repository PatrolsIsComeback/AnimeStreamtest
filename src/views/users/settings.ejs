<%- include('../partials/header') %>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-4">Account Settings</h1>
                    
                    <form action="/users/settings" method="POST">
                        <!-- Profile Settings -->
                        <div class="mb-4">
                            <h5>Profile</h5>
                            <div class="mb-3">
                                <label class="form-label">Bio</label>
                                <textarea name="bio" 
                                          class="form-control" 
                                          rows="3"><%= user.bio || '' %></textarea>
                            </div>
                        </div>

                        <!-- Preferences -->
                        <div class="mb-4">
                            <h5>Preferences</h5>
                            <div class="mb-3">
                                <label class="form-label">Theme</label>
                                <select name="theme" class="form-select">
                                    <option value="dark" <%= user.settings?.theme === 'dark' ? 'selected' : '' %>>Dark</option>
                                    <option value="light" <%= user.settings?.theme === 'light' ? 'selected' : '' %>>Light</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input type="checkbox" 
                                           class="form-check-input" 
                                           name="autoplay" 
                                           value="true"
                                           <%= user.settings?.autoplay ? 'checked' : '' %>>
                                    <label class="form-check-label">Autoplay next episode</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input type="checkbox" 
                                           class="form-check-input" 
                                           name="notifications" 
                                           value="true"
                                           <%= user.settings?.notifications ? 'checked' : '' %>>
                                    <label class="form-check-label">Enable notifications</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                Save Changes
                            </button>
                            <a href="/users/profile" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 