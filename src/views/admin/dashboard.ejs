<%- include('../partials/header') %>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Admin Dashboard</h1>
        <div class="btn-group">
            <a href="/admin/users" class="btn btn-outline-primary">
                <i class="bi bi-people"></i> Users
            </a>
            <a href="/admin/media" class="btn btn-outline-primary">
                <i class="bi bi-collection"></i> Media
            </a>
            <a href="/admin/suggestions" class="btn btn-outline-primary">
                <i class="bi bi-lightbulb"></i> Suggestions
            </a>
            <a href="/admin/blog" class="btn btn-outline-primary">
                <i class="bi bi-pencil-square"></i> Blog
            </a>
            <a href="/admin/alerts" class="btn btn-outline-primary">
                <i class="bi bi-bell"></i> Alerts
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-body-secondary">Total Users</h6>
                    <h2 class="card-title mb-0"><%= stats.totalUsers %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-body-secondary">Total Anime</h6>
                    <h2 class="card-title mb-0"><%= stats.totalAnime %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-body-secondary">Total Episodes</h6>
                    <h2 class="card-title mb-0"><%= stats.totalEpisodes %></h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Users -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Recent Users</h5>
        </div>
        <div class="list-group list-group-flush">
            <% stats.recentUsers.forEach(user => { %>
                <div class="list-group-item">
                    <div class="d-flex align-items-center">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
                             alt="Avatar"
                             class="rounded-circle me-3"
                             width="32"
                             height="32"
                             loading="lazy">
                        <div>
                            <h6 class="mb-0"><%= user.username %></h6>
                            <small class="text-body-secondary">
                                Last login: <%= new Date(user.lastLogin).toLocaleString() %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 